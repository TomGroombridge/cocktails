
<div class="edit-user">
  <div class="edit-title">
    <h2>My Account</h2>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="first_name">
        <%= f.label :first_name, class: 'first-name-label' %>
        <%= f.text_field :first_name, class: 'first-name-input' %>
      </div>
      <div class="last_name">
        <%= f.label :last_name, class: 'last-name-label' %>
        <%= f.text_field :last_name, class: 'last-name-input' %> 
      </div>
      <div class="email">
        <%= f.label :email, class: 'email-label' %>
        <%= f.text_field :email, required: true, autofocus: true, class: 'email-input' %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      <div class="password">
        <%= f.label :password, 'Password (leave blank to leave unchanged)', class: 'password-label' %>
        <%= f.password_field :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, class: 'password-input' %>
      </div>
      <div class="password_confirmation">
        <%= f.label :password_confirmation, class: 'confiramtion-label' %>
        <%= f.password_field :password_confirmation, required: false, class: 'confirmation-input' %>
      </div>
      <div class="current_password">
        <%= f.label :current, 'Current password (we need your current password to confirm your changes)', class: 'current-password-label'%>
        <%= f.password_field :current_password, hint: "we need your current password to confirm your changes", required: true, class: 'current-password-input' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Save changes", class: 'update-info' %>
      <%= link_to "Back", :back, class: 'back' %>
    </div>
  <% end %>


</div>