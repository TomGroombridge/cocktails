
<div class='subscribe-title'>
	<h2>Sign up</h2>
</div>

<div class='forms'>
	<div class="sign-in-form">
		<div class="form">
			<h2>Registered customers</h2>

			<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			  <div class="form-inputs">
			    <div class='email'>
			    		<%= f.input :email, required: false, autofocus: true %>
			    	</div>
			    	<br>
			    	<div class="password">
			    		<%= f.input :password, required: false %>
			    	</div>
			    	<br>
			    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
			  </div>

			  <div class="form-actions">
			    <%= f.button :submit, "Sign in" %>
			  </div>
			<% end %>
		</div>

	</div>
	<div class='subscirbe-form'>
		<div class='form'>
			<h1>Not registered? No worries</h1>
			<p>Creating an account with us is quick and easy, and will allow you to move through our checkout quicker. You can also store multiple shipping addresses, and gain access to your order history.</p>
			<%= simple_form_for(resource, url: registration_path(resource_name)) do |f| %>
			  <%= f.error_notification %>
			  	<div class="form-inputs">
			  		<div class='email'>
			    		<%= f.input :email, required: true, autofocus: true %>
			    	</div>
			    	<br>
			    	<div class="password">
			    		<%= f.input :password, required: true %>
			    	</div>
			    	<br>
			    	<div class="password-confirmation">
			    		<%= f.input :password_confirmation, required: true %>
			  		</div>
			  	</div>

			  <div class="form-actions sign-up">
			    <%= f.button :submit, "Sign up" %>
			  </div>
			<% end %>
		</div>
	</div>

</div>